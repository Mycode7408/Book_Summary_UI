<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Night"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ptsans_bold"
            android:text="Choose "
            android:textColor="@color/white"
            android:textSize="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ptsans_bold"
            android:text="Your Goals "
            android:textColor="@color/white"
            android:textSize="50dp" />

    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/linear1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/button24"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/roundbutton"
                android:fontFamily="@font/ptsans_regular"
                android:gravity="center"
                android:text="Mystery"
                android:textSize="25dp"
                app:layout_constraintEnd_toStartOf="@+id/button17"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/button23"
                android:layout_width="169dp"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/roundbutton"
                android:fontFamily="@font/ptsans_regular"
                android:gravity="center"
                android:text="Fear"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button17"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button17"
                android:layout_width="199dp"
                android:layout_height="60dp"
                android:layout_marginStart="108dp"
                android:layout_marginTop="39dp"
                android:layout_marginBottom="39dp"
                android:background="@drawable/roundbutton"
                android:fontFamily="@font/ptsans_regular"
                android:gravity="center"
                android:text="Self Acceptance"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/button22"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/button22"
                android:layout_width="169dp"
                android:layout_height="60dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="39dp"
                android:layout_marginBottom="37dp"
                android:text="Memory"
                android:textSize="25dp"
                android:gravity="center"
                android:fontFamily="@font/ptsans_regular"
                android:background="@drawable/roundbutton"
                app:layout_constraintBottom_toTopOf="@+id/button19"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button24" />

            <TextView
                android:id="@+id/button20"
                android:layout_width="216dp"
                android:layout_height="60dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="79dp"
                android:layout_marginBottom="37dp"
                android:text="Non-Fiction"
                android:textSize="25dp"
                android:gravity="center"
                android:fontFamily="@font/ptsans_regular"
                android:background="@drawable/roundbutton"
                app:layout_constraintBottom_toTopOf="@+id/button19"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button22"
                app:layout_constraintTop_toBottomOf="@+id/button23" />

            <TextView
                android:id="@+id/button19"
                android:layout_width="169dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="37dp"
                android:layout_marginBottom="27dp"
                android:background="@drawable/roundbutton"
                android:fontFamily="@font/ptsans_regular"
                android:gravity="center"
                android:text="Doubt"
                android:textSize="25dp"
                app:layout_constraintBottom_toTopOf="@+id/button18"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/button22" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="169dp"
                android:layout_height="60dp"
                android:layout_marginStart="-60dp"
                android:layout_marginTop="37dp"
                android:layout_marginBottom="27dp"
                android:background="@drawable/roundbutton"
                android:fontFamily="@font/ptsans_regular"
                android:gravity="center"
                android:text="Novel"
                android:textSize="25dp"
                app:layout_constraintBottom_toTopOf="@+id/button18"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button22" />

            <TextView
                android:layout_width="169dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="37dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="27dp"
                android:text="Math"
                android:textSize="25dp"
                android:gravity="center"
                android:fontFamily="@font/ptsans_regular"
                android:background="@drawable/roundbutton"
                app:layout_constraintBottom_toTopOf="@+id/button21"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button19"
                app:layout_constraintTop_toBottomOf="@+id/button20" />


            <TextView
                android:id="@+id/button18"
                android:layout_width="216dp"
                android:layout_height="60dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/roundbutton"
                android:text="Science"
                android:textSize="25dp"
                android:gravity="center"
                android:fontFamily="@font/ptsans_regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button21"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button19" />


            <TextView
                android:id="@+id/button21"
                android:layout_width="169dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="92dp"
                android:text="Fiction"
                android:textSize="25dp"
                android:gravity="center"
                android:fontFamily="@font/ptsans_regular"
                android:background="@drawable/roundbutton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button18"
                app:layout_constraintTop_toBottomOf="@+id/button19" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>